{
  "name": "discord-irc",
  "description": "Connects IRC and Discord channels by sending messages back and forth.",
  "keywords": [
    "discord",
    "irc",
    "gateway",
    "bot",
    "discord-irc",
    "reactiflux"
  ],
  "main": "dist/lib/index.js",
  "bin": "dist/lib/cli.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:FauxFaux/discord-irc.git"
  },
  "bugs": {
    "url": "https://github.com/FauxFaux/discord-irc/issues"
  },
  "scripts": {
    "start": "node dist/index.js",
    "start:server": "bun dist/lib/server.js",
    "build": "tsc",
    "format": "prettier --write '{lib,test}/**/*.?s'",
    "prepare": "npm run build",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "coverage": "vitest run --coverage"
  },
  "license": "MIT",
  "dependencies": {
    "discord.js": "^13.8.1",
    "irc-colors": "1.5.0",
    "irc-formatting": "1.0.0-rc3",
    "irc-upd": "0.11.0",
    "simple-markdown": "^0.7.3",
    "strip-json-comments": "^3.1.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22",
    "@types/bun": "^1.0.0",
    "@vitest/eslint-plugin": "^1",
    "bun": "^1.0.0",
    "eslint": "^9",
    "globals": "^14",
    "prettier": "~3.5",
    "typescript": "~5.8",
    "typescript-eslint": "^8",
    "vitest": "^3"
  }
}
