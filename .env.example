# Discord-IRC Bridge Configuration for Railway

# Required Environment Variables
DISCORD_TOKEN=your_discord_bot_token_here
IRC_NICKNAME=your_bot_nickname
IRC_SERVER=irc.libera.chat

# Channel Mapping (JSON format)
# Maps Discord channels to IRC channels
CHANNEL_MAPPING={"#discord-channel": "#irc-channel"}

# Optional Configuration
PORT=3000

# IRC Options (JSON format)
IRC_OPTIONS={"port": 6697, "secure": true, "floodProtection": true}

# Command Characters (JSON array)
COMMAND_CHARACTERS=["!", "."]

# Bot Behavior Flags
PARALLEL_PING_FIX=false
IRC_NICK_COLOR=true
IRC_STATUS_NOTICES=false
ANNOUNCE_SELF_JOIN=false

# User Management (JSON format)
IGNORE_USERS={"irc": [], "discord": [], "discordIds": []}

# Webhooks (JSON format)
WEBHOOKS={}

# Auto-send Commands (JSON array of arrays)
AUTO_SEND_COMMANDS=[]

# Private Messages Configuration
PM_CHANNEL_ID=123456789  # Discord channel ID for PM threads (or #channel-name)
PM_THREAD_PREFIX="PM: "  # Prefix for PM thread names
PM_AUTO_ARCHIVE=60       # Auto-archive threads after N minutes of inactivity

# Alternative: Use config file path instead of environment variables
# CONFIG_PATH=./config.json